@model IEnumerable<Morgenmadsbuffeten.Models.DataFromReception>

@{
    ViewData["Title"] = "List of guests for breakfast";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumbersOfAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumbersOfChildren)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 @(item.Date.ToString("d"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumbersOfAdults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumbersOfChildren)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DataFromReceptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DataFromReceptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DataFromReceptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
