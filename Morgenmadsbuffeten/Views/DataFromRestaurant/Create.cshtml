@model Morgenmadsbuffeten.Models.DataFromRestaurant

@{
    ViewData["Title"] = "Check in";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumbersOfAdults" class="control-label"></label>
                <input asp-for="NumbersOfAdults" class="form-control" />
                <span asp-validation-for="NumbersOfAdults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumbersOfChildren" class="control-label"></label>
                <input asp-for="NumbersOfChildren" class="form-control" />
                <span asp-validation-for="NumbersOfChildren" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check in" class="btn btn-primary" id="checkinbtn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

